{
  "name": "chiakirun",
  "version": "1.0.0",
  "description": "npm-scripts taskrunner",
  "main": "index.html",
  "scripts": {
    "start": "npm run sync & npm run css:watch & npm run chokidar:ejs",
    "css:build": "postcss -c ./postcss.config.js ./develop/postcss/common.css -o ./dist/css/common.css",
    "css:watch": "postcss -c ./postcss.config.js --map -d ./develop/css/ ./develop/postcss/common.css -w",
    "chokidar:ejs": "chokidar './develop/**/*.ejs' --command 'gulp ejs'",
    "sync": "browser-sync start --server ./develop/ --files='./develop/**/*.*'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chiilog/chiakirun.git"
  },
  "author": "Chiaki",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chiilog/chiakirun/issues"
  },
  "homepage": "https://github.com/chiilog/chiakirun#readme",
  "devDependencies": {
    "autoprefixer": "^6.6.1",
    "browser-sync": "^2.18.6",
    "chokidar-cli": "^1.2.0",
    "cssnano": "^3.10.0",
    "gulp": "^3.9.1",
    "gulp-ejs": "^3.0.0",
    "postcss-cli": "^3.0.0-beta",
    "postcss-custom-media": "^5.0.1",
    "postcss-custom-properties": "^5.0.1",
    "postcss-import": "^9.1.0",
    "postcss-load-config": "^1.2.0",
    "postcss-nested": "^1.0.0",
    "watch": "^1.0.1"
  }
}
